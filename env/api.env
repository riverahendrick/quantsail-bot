# API (FastAPI) environment variables
# Export these before running services/api

# Database
DATABASE_URL=postgresql+psycopg://quantsail:postgres@localhost:5433/quantsail

# Redis (rate limits, news pause)
REDIS_URL=redis://localhost:6380/0

# Encryption key (64 hex chars = 32 bytes)
# Generated for development; DO NOT USE IN PRODUCTION without rotation
MASTER_KEY=change_me_to_a_random_64_hex_char_string_for_production_security

# Firebase Admin (service account JSON path)
# You must generate this file from Firebase Console -> Project Settings -> Service Accounts
OGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# Google Auth (Backend/OAuth flow)
GOOGLE_CLIENT_ID=change_me.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=change_me_client_secret

# News provider
CRYPTOPANIC_API_KEY=change_me_cryptopanic_api_key

# Data sources
ALPHA_VANTAGE_API_KEY=change_me_alpha_vantage_api_key

# Optional tuning
PUBLIC_RATE_LIMIT_PER_MIN=60
PUBLIC_RATE_LIMIT_WINDOW_SECONDS=60
PUBLIC_LIST_LIMIT_DEFAULT=100
WS_POLL_SECONDS=1
WS_HEARTBEAT_SECONDS=15
WS_BACKLOG_LIMIT=100
BOT_STATUS=unknown