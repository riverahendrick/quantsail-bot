# Engine (Trading) environment variables
# Export these before running services/engine

# Database (shared with API)
DATABASE_URL=postgresql+psycopg://quantsail:postgres@localhost:5433/quantsail

# Redis (news pause)
REDIS_URL=redis://localhost:6380/0

# Engine config file path
ENGINE_CONFIG_PATH=config.json

# Optional overrides
QUANTSAIL_EXECUTION_MODE=dry-run
QUANTSAIL_EXECUTION_MIN_PROFIT_USD=0.10
QUANTSAIL_RISK_STARTING_CASH_USD=10000.0
QUANTSAIL_RISK_MAX_RISK_PER_TRADE_PCT=0.25
QUANTSAIL_SYMBOLS_ENABLED=BTC/USDT,ETH/USDT
QUANTSAIL_SYMBOLS_MAX_CONCURRENT_POSITIONS=1
MAX_TICKS=5

# Live trading (required only for live mode)
# NOTE: Ensure these are Testnet keys if BINANCE_TESTNET=true
BINANCE_API_KEY=change_me_binance_api_key
BINANCE_SECRET=change_me_binance_secret
BINANCE_TESTNET=true

# Encryption key for exchange key decryption (same MASTER_KEY as API)
MASTER_KEY=change_me_to_a_random_64_hex_char_string_for_production_security

# Data sources
ALPHA_VANTAGE_API_KEY=change_me_alpha_vantage_key
CRYPTOPANIC_API_KEY=change_me_cryptopanic_key
OPENAI_API_KEY=sk-change-me-openai-key-placeholder-do-not-commit-real-keys